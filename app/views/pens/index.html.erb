<p id="notice"><%= notice %></p>

<h1>Pens</h1>
<div class="row">
  <div class="col-md-6">

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Lease</th>
        </tr>
      </thead>

      <tbody>
        <% @pens.each do |pen| %>
          <tr>
            <td><%= link_to pen.name, pen %></td>
            <td><%= link_to pen.lease_id, pen.lease %></td>
            <td><%= link_to 'Edit', edit_pen_path(pen) %></td>
            <td><%= link_to 'Destroy', pen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

