<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='col-md-12 space-between'>
    <h1>Divers</h1>
    <div>
      <%= link_to new_diver_path, class: "btn btn-primary" do |x| %>
      Create Diver <%= fa_icon "plus"%>
      <% end %>
    </div>

  </div>
</div>
<hr>


<table class="table table-striped table-bordered table-sm">
  <thead class="table-light">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Address</th>
      <th>Secondary contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @divers.each do |diver| %>
      <tr>
        <td><%= diver.first_name %></td>
        <td><%= diver.last_name %></td>
        <td><%= diver.email %></td>
        <td><%= diver.contact %></td>
        <td><%= diver.address %></td>
        <td><%= diver.secondary_contact %></td>
        <td><%= link_to 'Show', diver %></td>
        <td><%= link_to 'Edit', edit_diver_path(diver) %></td>
        <td>
          <%= link_to diver, method: :delete,  data: { confirm: 'Are you sure?' } do |x| %>
          <%= fa_icon "trash"%>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
