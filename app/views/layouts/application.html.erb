<!DOCTYPE html>
<html>
  <head>
    <title>ELsocial</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= render "shared/navigation" %>
    <% end %>
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <div class="container">
        <div id="page-content">
          <%= yield %>
        </div>
      </div>
  </body>
</html>
