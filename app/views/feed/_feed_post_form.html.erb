<%= form_for @post, url: user_posts_path(id: 1, feed_id: 1) do |f| %>
<div class="form-group">
  <div class="field">
    <%= f.label :title, class: 'control-label'%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :content, class: 'control-label'%>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <div class="field">
    <%= label_tag :image, 'Add image', class: 'control-label' %><br />
    <%= f.file_field :image %>
  </div>
</div>

<%= f.submit "Create post", class: 'btn btn-sm btn-success' %>
<% end %>
