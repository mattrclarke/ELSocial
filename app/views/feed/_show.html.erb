<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Feed</h1>
    </div>
    <div class="col-md-4">
    <h3 class="mt-3">Share your thoughts</h3>
    <%= form_tag user_posts_path(feed_id: params[:id]), method: :post, remote: true do %>
      <div class="form-group">
        <div class="field">
          <%= label_tag :title, 'Title', class: 'control-label' %><br />
          <%= text_field_tag :title,'', class: 'form-control', required: true, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <%= label_tag :content, 'Content', class: 'control-label' %><br />
          <%= text_area_tag :content,'', class: 'form-control', required: true, autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <%= button_tag class: 'btn btn-primary qol-btnsmall' do %>
              <i class="fa fa-lock" aria-hidden="true"></i> Post
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
    <div id="feed-container">
      <%= render "shared/feed", posts: @posts %>
    <div>
</div>
