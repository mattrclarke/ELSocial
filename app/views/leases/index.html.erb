<p id="notice"><%= notice %></p>
    <h1>Leases</h1>
    <table class="table table-striped table-bordered table-sm">
      <thead class="table-light">
        <tr>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @leases.each do |lease| %>
          <tr>
            <td>
              <%= link_to lease do |x| %>
              <%= lease.location %>
              <% end %>
            </td>
            <td><%= link_to 'Edit', edit_lease_path(lease) %></td>

            <td>
              <%= link_to lease, method: :delete,  data: { confirm: 'Are you sure?' } do |x| %>
              <%= fa_icon "trash"%>
              <% end %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


    <%= link_to new_lease_path, class: "btn btn-primary" do |x| %>
      Create Lease <%= fa_icon "plus"%>
    <% end %>
